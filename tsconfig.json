{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@modules": ["src/modules/index"],
      "@services": ["src/services/index"],
      "@lib/*": ["src/lib/*"],
      "@db/*": ["db/*"]
    },
    "lib": [
      "es5",
      "es2015.promise",
      "es6",
      "es7"
    ],
    "types": [
      "node",
      "jsdom",
      "mkdirp-promise",
      "node-fetch",
      "figlet",
      "clear"
    ],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "dist",
  },
  "include": [
    "./app.ts",
    "config/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bin"
  ]
}